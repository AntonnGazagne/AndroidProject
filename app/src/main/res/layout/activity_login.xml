<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">

    <Button
            android:text="Inscription"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/login_activity_inscrirebutton"
            android:background="#3B5998" android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="@+id/login_activity_connectbutton"
            app:layout_constraintStart_toStartOf="@+id/login_activity_connectbutton" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/login_activity_connectbutton"/>
    <TextView
            android:text="Mot de passe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_activity_password_txt" android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/login_activity_password_edittxt"
            app:layout_constraintStart_toStartOf="@+id/login_activity_password_edittxt"
    />
    <TextView
            android:text="TwiBook"
            android:layout_width="127dp"
            android:layout_height="44dp"
            android:id="@+id/signup_activity_appname"
            android:fontFamily="sans-serif-medium" android:textSize="30sp"
            android:textColor="#3B5998" android:textAlignment="textStart"
            android:layout_marginTop="100dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.69"/>
    <ImageView
            android:layout_width="116dp"
            android:layout_height="118dp" app:srcCompat="@mipmap/logo_app"
            android:id="@+id/login_activity_applogo"
            app:layout_constraintTop_toTopOf="@+id/signup_activity_appname"
            app:layout_constraintBottom_toBottomOf="@+id/signup_activity_appname"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/signup_activity_appname"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.378"
    />
    <TextView
            android:text="Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_activity_email_txt" android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/login_activity_email_edittxt"
            app:layout_constraintStart_toStartOf="@+id/login_activity_email_edittxt"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/login_activity_email_edittxt" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="115dp"
            app:layout_constraintTop_toBottomOf="@+id/signup_activity_appname"
            app:layout_constraintHorizontal_bias="0.505"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/login_activity_password_edittxt" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/login_activity_email_edittxt" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Connexion"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:id="@+id/login_activity_connectbutton"
            android:background="#3B5998" android:textColor="@android:color/white" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/login_activity_password_edittxt"/>
</android.support.constraint.ConstraintLayout>