<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CommentaryActivity">
    <EditText
            android:layout_width="304dp"
            android:layout_height="138dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/commentaireText" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="120dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="60dp"
            app:layout_constraintHorizontal_bias="0.538"
            android:hint="@string/zoneCommentaire" android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="25sp"/>
    <Button
            android:text="@string/boutonComentaire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/valideCommentaire"
            android:layout_marginTop="260dp"
            app:layout_constraintTop_toBottomOf="@+id/commentaireText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="161dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="161dp" android:textAlignment="center"
            android:textColor="@color/design_default_color_primary_dark"/>
</android.support.constraint.ConstraintLayout>