<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreateArticleActivity">

    <TextView
            android:text="@string/TitreArticle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/Titre" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/descriptionArticle" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/titreArticle" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="@string/Description"
            android:textAlignment="viewStart" app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0.25" android:selectAllOnFocus="false" android:singleLine="false"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/Post"
            app:layout_constraintVertical_bias="0.0" android:maxLines="20"/>
    <Button
            android:text="@string/Post"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:id="@+id/Post" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/titreArticle" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/Titre" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.25"
            android:hint="@string/Titre" android:selectAllOnFocus="false"/>
</android.support.constraint.ConstraintLayout>